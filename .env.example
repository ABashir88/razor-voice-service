# Razor Voice Service — Environment Variables
# Copy this file to .env and fill in your API keys

# ── STT (Required) ──
DEEPGRAM_API_KEY=

# ── TTS (At least one required) ──
TTS_PROVIDER=telnyx
TELNYX_API_KEY=
TELNYX_VOICE=Telnyx.KeeganM

# ElevenLabs (optional, higher quality)
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=pNInz6obpgDQGcFmaJgB

# ── Wake Word ──
WAKE_WORD=razor
# Porcupine (optional, faster wake word detection)
PORCUPINE_ACCESS_KEY=

# ── Bluetooth ──
BT_DEVICE_NAME=Ortizan X8 Pro
BT_RECONNECT_INTERVAL_MS=60000

# ── Audio ──
SAMPLE_RATE=16000
CHANNELS=1
BIT_DEPTH=16

# ── VAD ──
VAD_ENERGY_THRESHOLD=0.008
VAD_SILENCE_DURATION_MS=1200
VAD_SPEECH_MIN_MS=300

# ── Playback ──
PLAYBACK_MUTE_BUFFER_MS=300

# ── Logging ──
LOG_LEVEL=info

# ── Brain (Claude API) ──
ANTHROPIC_API_KEY=
